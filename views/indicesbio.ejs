   <script>
     const estacionesClorofila = <%- JSON.stringify(clorofila) %>;
      const avgLat = 41.39, avgLon = 2.15;

      // Inicializar mapa
      const map = L.map('map-clorofila').setView([avgLat, avgLon], 9);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
         attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      // Definición de proyección UTM31T → WGS84
      proj4.defs("EPSG:25831", "+proj=utm +zone=31 +ellps=GRS80 +units=m +no_defs");
      const fromUTM = proj4("EPSG:25831", "WGS84");

      // Función para asignar color según umbral ecológico
      function colorClorofila(val) {
         if (val < 2.0) return 'green';   // Oligotrófico
         else if (val < 5.0) return 'yellow';  // Mesotrófico
         else return 'red';     // Eutrófico
      }

      // Añadir marcadores
      estacionesClorofila.forEach(est => {
         const [lon, lat] = fromUTM.forward([est["UTM X"], est["UTM Y"]]);
         const color = colorClorofila(est.Valor);

         L.circleMarker([lat, lon], {
            radius: 7,
            fillColor: color,
            color: color,
            weight: 1,
            fillOpacity: 0.8
         })
            .bindPopup(
               `<b>Estació:</b> ${est["Codi Estació"]}` +
               `<br><b>Clorofila A:</b> ${est.Valor.toFixed(2)} mg/m³`
            )
            .addTo(map);
      });

      // Leyenda
      const legend = L.control({ position: 'bottomright' });
      legend.onAdd = function () {
         const div = L.DomUtil.create('div', 'info legend');
         const grades = [0, 2, 5];
         const labels = [
            '<strong>Estado trófico</strong>',
            'Oligotrófico (<2)',
            'Mesotrófico (2–5)',
            'Eutrófico (>5)'
         ];
         const colors = ['green', 'yellow', 'red'];
         div.innerHTML = labels[0] + '<br>';
         for (let i = 0; i < colors.length; i++) {
            div.innerHTML +=
               `<i style="background:${colors[i]};width:18px;height:18px;display:inline-block;margin-right:8px;"></i>` +
               labels[i + 1] + '<br>';
         }
         return div;
      };
      legend.addTo(map);
   </script>
